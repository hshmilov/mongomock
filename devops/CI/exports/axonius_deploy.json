{
  "variables": {
    "host_installation": "../../scripts/host_installation/",
    "image_name": "axonius-{{user `name`}}",
    "disk_size": "500",
    "qemu_output_directory": "output-axonius",
    "qcow_output": "axonius.qcow3",
    "deployment_script": "./deploy_encrypted_axonius.sh",
    "boot_config_script": "empty_config_script",
    "manifest_file": "manifest.json",
    "ami_regions": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "source_image_project_id": "{{user `source_image_project_id`}}",
      "source_image_family": "{{user `source_image_family`}}",
      "zone": "us-east1-b",
      "image_name": "{{user `image_name` | clean_resource_name}}",
      "omit_external_ip": true,
      "disk_size": "{{user `disk_size`}}",
      "use_internal_ip": true,
      "project_id": "axonius-office",
      "image_description": "Axonius",
      "machine_type": "n1-standard-8",
      "ssh_username": "ubuntu",
      "ssh_pty": true,
      "network": "axonius-office-vpc",
      "subnetwork": "private-subnet",
      "ssh_timeout": "4h"
    },
    {
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{user `source_ami_filter_name`}}",
          "root-device-type": "ebs"
        },
        "owners": [
          "{{user `source_ami_owner`}}"
        ],
        "most_recent": true
      },
      "region": "us-east-2",
      "tags": {
        "Description": "Axonius Export {{user `name`}}."
      },
      "instance_type": "t2.xlarge",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_size": "{{user `disk_size`}}",
          "encrypted": false
        }
      ],
      "ami_name": "{{user `image_name`}}",
      "user_data_file": "./set_ubuntu_user.sh",
      "vpc_id": "vpc-12290d7b",
      "subnet_id": "subnet-843a4cff",
      "ssh_username": "ubuntu",
      "ssh_password": "bringorder",
      "ssh_pty": true,
      "ami_regions": "{{user `ami_regions`}}"
    },
    {
      "type": "qemu",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_url": "{{user `iso_checksum_url`}}",
      "disk_image": true,
      "disk_size": "{{user `disk_size`}}G",
      "cpus": 8,
      "accelerator": "kvm",
      "memory": 32768,
      "output_directory": "{{user `qemu_output_directory`}}",
      "disk_interface": "virtio-scsi",
      "disk_discard": "unmap",
      "disk_detect_zeroes": "on",
      "ssh_username": "ubuntu",
      "ssh_pty": true,
      "ssh_password": "bringorder",
      "vm_name": "axonius",
      "headless": true,
      "http_directory": "ova_cloud-data",
      "qemuargs": [
        ["-smbios", "type=1,serial=ds=nocloud-net;instance-id=packer;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/"],
        ["-netdev", "user,id=user.0,net=10.0.2.0/26,hostfwd=tcp::{{ .SSHHostPort }}-:22"],
        ["-device", "virtio-net,netdev=user.0"],
        ["-device", "virtio-scsi-pci,id=scsi0"],
        ["-device", "scsi-hd,bus=scsi0.0,drive=drive0"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "export HISTFILE=/dev/null",
        "echo ubuntu:bringorder | sudo /usr/sbin/chpasswd"
      ]
    },
    {
      "type": "shell",
      "script": "./remove_floppy.sh",
      "remote_folder": "/tmp",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./grow_partition.sh",
      "remote_folder": "/tmp",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "clean_qemu_machine.sh",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "only": [
        "qemu"
      ]
    },
    {
      "type": "shell",
      "script": "clean_aws_machine.sh",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "only": [
        "amazon-ebs"
      ]
    },
    {
      "type": "shell",
      "script": "clean_gce_machine.sh",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "only": [
        "googlecompute"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo hostnamectl set-hostname --static axonius"
      ]
    },
    {
      "type": "file",
      "source": "{{user `host_installation`}}uploads",
      "destination": "/home/ubuntu/uploads"
    },
    {
      "type": "shell",
      "script": "{{user `host_installation`}}{{user `init_host_filename`}}",
      "remote_folder": "/home/ubuntu/",
      "expect_disconnect": true,
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "inline": [
        "echo 'sentinel file on temp that should be deleted' > /tmp/axonius_sentinel_file_init_host_should_be_deleted.tmp"
      ]
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "inline": [
        "reboot"
      ],
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "pause_before": "10s",
      "inline": [
        "[ ! -f /tmp/axonius_sentinel_file_init_host_should_be_deleted.tmp ]"
      ]
    },
    {
      "type": "shell",
      "script": "./set_axonius_dns_until_boot.sh",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "file",
      "source": "{{user `installer`}}",
      "destination": "/home/ubuntu/version.zip"
    },
    {
      "type": "file",
      "source": "{{user `boot_config_script`}}",
      "destination": "/home/ubuntu/boot_configuration_script.tar"
    },
    {
      "type": "shell",
      "script": "{{user `deployment_script`}}",
      "environment_vars": [
        "AXONIUS_VERSION_NAME={{user `name`}}"
      ],
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./install_chef_client.sh",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./fetch_chef_secret_and_mark.sh",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "remote_folder": "/tmp",
      "inline": [
        "mkdir -p /etc/cron.d/",
        "cp uploads/cron.d/* /etc/cron.d/",
        "chmod +700 /etc/cron.d/*",
        "chown -R root:root /etc/cron.d/*",
        "chmod +x /home/ubuntu/uploads/create_pre_installed_crons.sh",
        "/home/ubuntu/uploads/create_pre_installed_crons.sh",
        "rm -rf /home/ubuntu/uploads",
        "cat /dev/null > /home/ubuntu/.bash_history"
      ],
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "./remove_splash_screen_grub.sh",
      "remote_folder": "/tmp",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "only": ["qemu"]
    },
    {
      "type": "shell",
      "script": "./clean_machine_after_installation.sh",
      "remote_folder": "/tmp",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "{{user `manifest_file`}}"
    },
    {
      "type": "shell-local",
      "only": ["qemu"],
      "inline": [
        "mv {{user `qemu_output_directory`}}/axonius {{user `qcow_output`}}",
        "rmdir {{user `qemu_output_directory`}}"
      ]
    }
  ]
}
