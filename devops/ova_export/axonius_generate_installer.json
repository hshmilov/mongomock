{
  "variables": {
    "build_id": "none",
    "build_name": "test",
    "password": "bringorder",
    "branch": "develop",
    "fork": "axonius",
    "image": "Axonius-operational-export-103"
  },
  "builders": [
    {
      "name": "axonius-{{user `build_name` }}-installer-generator",
      "type": "vmware-vmx",
      "source_path": "/home/ubuntu/{{user `image` }}/{{user `image` }}.vmx",
      "ssh_username": "ubuntu",
      "ssh_password": "{{user `password` }}",
      "shutdown_command": "echo {{user `password`}} | sudo -S shutdown -P now",
      "skip_compaction": true,
      "headless": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./axonius_deploy.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }} {{user `branch`}} {{user `fork`}} {{user `password`}} {{user `build_name`}}"
    },
    {
      "type": "file",
      "source": "/home/ubuntu/cortex/axonius_{{user `build_name`}}.py",
      "direction": "download",
      "destination": "./axonius_{{user `build_name`}}.py"
    }
  ],
  "post-processors": [
    {
        "type": "shell-local",
        "inline": [
          "rm -rf ./output-axonius-{{user `build_name` }}-installer-generator"
        ]
    }
  ]
}
