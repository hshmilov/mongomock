{
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "rules": {
    "vue/multiline-html-element-content-newline": ["warn", {
      "ignoreWhenEmpty": true,
      "ignores": ["x-button", "v-btn", "div", "md-icon"],
      "allowEmptyLines": false
    }]
  },
  "globals": {
    "arguments": "readonly"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.common.js"
      } 
    }
  }
}
