{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": false,
      "module": "es6",
      "baseUrl": ".",
      "paths": {
          "@": ["./src/*"],
          "@components/*": ["./src/components/*"],
          "@axons/*": ["./src/components/axons/*"],
          "@networks/*": ["./src/components/networks/*"],
          "@neurons/*": ["./src/components/neurons/*"],
          "@pages/*": ["./src/components/pages/*"],
          "@api/*": ["./src/api/*"],
          "@store/*": ["./src/store/*"],
          "@mixins/*": ["./src/mixins/*"],
          "@constants/*": ["./src/constants/*"],
          "@directives/*": ["./src/directives/*"],
          "@helpers/*": ["./src/helpers/*"]
      }
    },
    "exclude": ["node_modules"]
  }
